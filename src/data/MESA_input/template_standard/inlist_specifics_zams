! inlist to create a ZAMS star

&star_job
  ! see star/defaults/star_job.defaults

  ! begin with a pre-main sequence model
    create_pre_main_sequence_model = .true.

  ! Use A09_Prz_zfracs.
    initial_zfracs = 8

  ! save a model at the end of the run
    save_model_filename = 'MASSM_at_ZAMS.mod'
    filename_for_profile_when_terminate = 'MASSM_at_ZAMS_profile.data'
    save_pulse_data_filename = 'MASSM_at_ZAMS_profile.GYRE'

/ ! end of star_job namelist


&eos
  ! eos options
  ! see eos/defaults/eos.defaults

/ ! end of eos namelist


&kap
  ! kap options
  ! see kap/defaults/kap.defaults

  use_Type2_opacities = .true.
  Zbase = METALLICITY

/ ! end of kap namelist


&controls
  ! see star/defaults/controls.defaults

  ! starting specifications

    initial_mass = MASS ! in Msun units
    initial_z = METALLICITY

  ! Mixing
    min_D_mix = DMIX_VALUE

  ! when to stop

    ! stop when the star nears ZAMS (Lnuc/L > 0.99)
    Lnuc_div_L_zams_limit = 0.99d0
    stop_near_zams = .true.

  ! output

    star_history_name = 'history_to_zams.data'

/ ! end of controls namelist

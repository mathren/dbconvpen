! inlist to evolve a star from helium depletion to carbon depletion

&star_job
  ! see star/defaults/star_job.defaults

  ! begin with a pre-main sequence model
    create_pre_main_sequence_model = .false.

  ! save a model at the end of the run
    save_model_filename = 'MASSM_at_cdep.mod'
    filename_for_profile_when_terminate = 'MASSM_at_cdep_profile.data'
    save_pulse_data_filename = 'MASSM_at_cdep_profile.GYRE'

  ! load from a saved model
    load_saved_model = .true.
    load_model_filename = 'MASSM_at_hedep.mod'

/ ! end of star_job namelist

&eos
  ! eos options
  ! see eos/defaults/eos.defaults

/ ! end of eos namelist

&kap
  ! kap options
  ! see kap/defaults/kap.defaults
  use_Type2_opacities = .true.
  Zbase = METALLICITY

/ ! end of kap namelist


&controls
  ! see star/defaults/controls.defaults

  ! starting specifications
    initial_mass = MASS ! in Msun units
    initial_z = METALLICITY

  ! Mixing
    min_D_mix = DMIX_VALUE
    overshoot_D_min = DMIX_VALUE

  ! when to stop

    ! stop when the center mass fraction of c12 drops below this limit
    xa_central_lower_limit_species(1) = 'c12'
    xa_central_lower_limit(1) = 1d-9

  ! output
    star_history_name = 'history_to_cdep.data'

/ ! end of controls namelist
